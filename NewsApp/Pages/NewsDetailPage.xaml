<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApp.Pages.NewsDetailPage"
             Title="News Details">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15">
            <Image HeightRequest="250" Aspect="AspectFill" Source="{Binding Image}" />
            <Label FontSize="Title" FontAttributes="Bold" Text="{Binding Title}" />
            <Label FontSize="Medium" Text="{Binding Content}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
